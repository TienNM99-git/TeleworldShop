@model TeleworldShop.Web.Infrastructure.Core.PaginationSet<TeleworldShop.Web.Models.ProductViewModel>

@{

    var tag = (TeleworldShop.Web.Models.TagViewModel)ViewBag.Tag;
    var pageIndex = Model.Page;
    ViewBag.Title = pageIndex == 1 ? "Result for tag " + tag.Name : "Result for tag " + tag.Name + " - Page " + pageIndex;
    ViewBag.MetaKeyword = pageIndex == 1 ? "Result for tag " + tag.Name : "Result for tag " + tag.Name + " - Page " + pageIndex;
    ViewBag.MetaDescription = pageIndex == 1 ? "Result for tag " + tag.Name : "Result for tag " + tag.Name + " - Page " + pageIndex;
    Layout = "~/Views/Shared/Layouts.cshtml";
}
    <div class="women-product">
        @if (Model.Count > 0)
        {
            <div class="w_content">
                <div class="women">
                    <a href=""><h4>Tag: @tag.Name - <span>@Model.TotalCount items</span> </h4></a>

                    <div class="clearfix"> </div>
                </div>
            </div>
            <div class="grid-product">
                @foreach (var product in Model.Items)
                {
                    var url = "/" + product.Alias + ".p-" + product.Id + ".html";
                    <div class="product-grid">
                        <div class="content_box">
                            <a href="@url">
                                <div class="left-grid-view grid-view-left">
                                    <img src="@product.Image" width="250px" height="300px" class="img-responsive watch-right" alt="@product.Name" />
                                    <div class="mask">
                                        <div class="info">View</div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <h4><a href="@url">@product.Name</a></h4>
                        <p>@product.Description</p>
                        @(product.Price == 0 ? "Contact: 0362537131" : product.Price.ToString("N2")+ "₫")
                    </div>
                }
                <div class="clearfix"> </div>
                @if (Model.TotalPages > 1)
                {
                    // Create numeric links
                    var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
                    var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);

                    <nav>
                        <ul class="pagination">
                            @if (Model.Page > 1)
                            {
                                <li class="page-item">
                                    <a href="?page=1" aria-label="First" class="page-link">
                                        <i class="fa fa-angle-double-left"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a href="?page=@(Model.Page-1)" aria-label="Previous" class="page-link">
                                        <i class="fa fa-angle-left"></i>
                                    </a>
                                </li>
                            }

                            @for (int i = startPageIndex; i <= endPageIndex; i++)
                            {
                                if (Model.Page == i)
                                {
                                    <li class="page-item active"><a href="?page=@i" title="Page @i">@i</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a href="?page=@i" title="Page @i">@i</a></li>
                                }
                            }
                            @if (Model.Page < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?page=@(Model.Page+1)" aria-label="Next">
                                        <i class="fa fa-angle-right"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="?page=@Model.TotalPages" aria-label="Last">
                                        <i class="fa fa-angle-double-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>      
        }
        else
        {
            <div class="text-center">No item found</div>
        }


    </div>
