@using Microsoft.AspNet.Identity;
@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}
<div class="header">
    <div class="top-header">
        <div class="container">
            <div class="top-header-left">
                @*<ul class="support">
                        <li class="van"><a href="#"><label> </label></a></li>
                        <li><a href="#">Free shipping <span class="live">on order over 500</span></a></li>
                    </ul>*@
                <ul class="support">
                    <li><a href="/page/introduction.html"><label> </label></a></li>
                    <li><a href="/page/introduction.html">Introduction</a></li>
                </ul>
                <ul class="support">
                    <li><a href="/contact.html"><label> </label></a></li>
                    <li><a href="/contact.html">Contact</a></li>
                </ul>
                <div class="clearfix"> </div>
            </div>
            <div class="top-header-right">
                <div class="down-top">
                    <select class="in-drop">
                        <option value="English" class="in-of">English</option>
                        <option value="Japanese" class="in-of">Japanese</option>
                        <option value="French" class="in-of">French</option>
                        <option value="German" class="in-of">German</option>
                    </select>
                </div>
                <div class="down-top top-down">
                    <select class="in-drop">

                        <option value="Dollar" class="in-of">Dollar</option>
                        <option value="Yen" class="in-of">Yen</option>
                        <option value="Euro" class="in-of">Euro</option>
                    </select>
                </div>
                <!---->
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="bottom-header">
        <div class="container">
            <div class="header-bottom-left">
                <div class="logo">
                    <a href="/"><img width="310px" height="100px" src="~/Assets/client/images/pinterest_board_photo.png" alt=" " /></a>
                </div>
                <div class="search">
                    <form action="/search.html" method="get">
                        <input type="text" id="txtKeyword" placeholder="Enter keywords here..." name="keyword" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}">
                        <input type="submit" value="SEARCH" id="btnSearch">
                    </form>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="header-bottom-right">
                @using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { @id = "frmLogout" }))
                {
                    if (Request.IsAuthenticated)
                    {
                        @Html.AntiForgeryToken()
                        <ul class="login">
                            <li><a href="/info.html"><span> </span>WELCOME: @User.Identity.GetUserName()</a></li> |
                            <li><a href="#" id="btnLogout">LOGOUT</a></li>
                        </ul>
                    }
                    else
                    {
                        <ul class="login">
                            <li><a href="/login.html"><span> </span>LOGIN</a></li> |
                            <li><a href="/register.html">REGISTER</a></li>
                        </ul>
                    }
                }
                <div class="cart"><a href="/cart.html"><span> </span>CART</a></div>
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>