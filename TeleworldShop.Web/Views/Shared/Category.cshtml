<div class="sub-cate">
    <div class="top-nav rsidebar span_1_of_left">
        <h3 class="cate">CATEGORIES</h3>
        <ul class="menu">
            @foreach (var category in Model.Where(x => x.ParentId == null && x.Status == true))
            {
                var url = "/" + category.Alias + ".pc-" + category.Id + ".html";
                var childCategories = Model.Where(x => x.ParentId == category.Id && x.Status == true);
                <li class="item1">

                    @if (childCategories.Count() > 0)
                    {
                        <a href="@url">
                            @category.Name<img class="arrow-img" src="/Assets/client/images/arrow1.png" alt="" />
                        </a>
                    }
                    else
                    {
                        <a href="@url">
                            @category.Name
                        </a>
                    }
                    @if (childCategories.Count() > 0)
                    {
                        <ul class="cute">
                            @foreach (var childCategory in childCategories)
                            {
                                var childUrl = "/" + childCategory.Alias + ".pc-" + childCategory.Id + ".html";
                                <li class="subitem1"><a href="@childUrl">@childCategory.Name</a></li>
                            }
                        </ul>
                    }
                </li>
            }
        </ul>
    </div>
    <div class="chain-grid menu-chain">
        <a href="single.html"><img class="img-responsive chain" src="/Assets/client/images/ads.jpg" alt=" " /></a>
        <div class="grid-chain-bottom chain-watch">
            <span class="actual dolor-left-grid">7.190.000</span>
            <span class="reducedfrom">7.990.000</span>
            <h6><a href="/samsung-galaxy-tab-a7.p-34.html">Samsung Galaxy Tab A7 2020</a></h6>
        </div>
    </div>
    <a class="view-all all-product" href="/tablet.pc-3.html">VIEW ALL TABLET PRODUCTS<span> </span></a>
</div>
