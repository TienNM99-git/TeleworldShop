@model TeleworldShop.Web.Models.RegisterViewModel
@using BotDetect.Web.Mvc;
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
<div class="register">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken(); //Prevent continuously submitting
        @Html.ValidationSummary(false, "", new { @class = "error" })

        if (ViewData["SuccessMsg"] != null)
        {
            <div class="alert alert-success" role="alert">
                <strong>Congratulation!! </strong>You have registered successfully .
                <br />Click <a href="/login.html">here </a>to login.
            </div>
        }
        <div class="register-top-grid">
            <h3>ENTER USER INFORMATION</h3>
            <div class="mation">
                <span>Full Name<label>*</label></span>
                @Html.TextBoxFor(model => model.FullName)
                <span>Email<label>*</label></span>
                @Html.TextBoxFor(model => model.Email)
                <span>Adddress<label>*</label></span>
                @Html.TextBoxFor(model => model.Address)
                <span>Phone<label>*</label></span>
                @Html.TextBoxFor(model => model.PhoneNumber)

                <span>Username<label>*</label></span>
                @Html.TextBoxFor(model => model.UserName)
                <span>Password<label>*</label></span>
                @Html.PasswordFor(model => model.Password)

                @{
                    MvcCaptcha registerCaptcha = new MvcCaptcha("registerCaptcha");
                }
                @Html.Captcha(registerCaptcha)
                @Html.TextBox("CaptchaCode")

            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
        <div class="register-but">
            <input type="submit" value="Submit">
            <div class="clearfix"> </div>
        </div>
    }
</div>
