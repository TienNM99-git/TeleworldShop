@model TeleworldShop.Web.Models.RegisterViewModel
@using BotDetect.Web.Mvc;
@{
    ViewBag.Title = "Register";
    //Layout = "~/Views/Shared/Layouts.cshtml";
}
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Registration Page</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    @Styles.Render("~/css/advanced")
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a href="#"><b>TELEWORLD</b>SHOP</a>
        </div>

        <div class="card">
            <div class="card-body register-card-body">
                <h3 class="login-box-msg">Register a new membership</h3>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken(); //Prevent continuously submitting
                    @Html.ValidationSummary(false, "", new { @class = "error" })

                    if (ViewData["SuccessMsg"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <strong>Congratulation!! </strong>You have registered successfully .
                            <br />Click <a href="/login.html">here </a>to login.
                        </div>
                    }
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", @placeholder = "Full name" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Address" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-address-book"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @placeholder = "Phone Number" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-mobile"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Username" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user-secret"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3" style="justify-content:center">
                        @{
                            MvcCaptcha registerCaptcha = new MvcCaptcha("registerCaptcha");
                            registerCaptcha.UserInputID = "registerCaptcha";
                        }
                        @Html.Captcha(registerCaptcha)
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBox("CaptchaCode", null, new { @class = "form-control", @placeholder = "Enter Captcha" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-qrcode"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                                <label for="agreeTerms">
                                    I agree to the <a href="#">terms</a>
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                        <!-- /.col -->
                    </div>
                }
                @*<div class="social-auth-links text-center mb-3">
                        <p>- OR -</p>
                        @Html.Partial("_ExternalLoginsListPartial", new TeleworldShop.Web.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    </div>*@
                <!-- /.social-auth-links -->

                <a href="/login.html" class="text-center">I already have a membership</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
    @Scripts.Render("~/js/forms")
    <!-- /.register-box -->  
</body>
</html>