@model TeleworldShop.Web.Models.FeedbackViewModel
@using BotDetect.Web.Mvc;
@{
    ViewBag.Title = "Contact";
    ViewBag.MetaKeyword = "Contact";
    ViewBag.MetaDescription = "Teleworld Shop contact information";

    Layout = "~/Views/Shared/Layouts.cshtml";
}
@section footerJS{
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBnhIsUOyguVoboS5VyQHxyqa2cQQPddHw&libraries=&v=weekly"></script>
    <script src="~/Assets/client/js/controllers/contact.js"></script>
}
<style>
    #map {
        height: 400px;
    }
</style>
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
<input type="hidden" id="hidAddress" value="@Model.ContactDetail.Name<br />Phone:@Model.ContactDetail.Phone <br>Address: @Model.ContactDetail.Address" />
<input type="hidden" id="hidLat" value="@Model.ContactDetail.Lat" />
<input type="hidden" id="hidLng" value="@Model.ContactDetail.Lng" />
<input type="hidden" id="hidName" value="@Model.ContactDetail.Name" />
<div class="main" style="width:100%; float:none">
    <div class="reservation_top">
        <div class="contact_right">
            <h3>Our Contact Information</h3>
            <address class="address">
                <p>@Model.ContactDetail.Address</p>
                <dl>
                    <dt> </dt>
                    <dd>Phone:<span> @Model.ContactDetail.Phone</span></dd>
                    <dd>E-mail:&nbsp;<a href="mailto:@(Model.ContactDetail.Email)">@(Model.ContactDetail.Email)</a></dd>
                </dl>
            </address>
            <div class="clearfix"></div>
            <div id="map"></div>
        </div>
    </div>

    <div class="reservation_top">
        <div class="contact_right">
            <h3>Give Us Your Feedbacks</h3>
            <div class="contact-form">
                @using (Html.BeginForm("SendFeedback", "Contact", FormMethod.Post))
                {
                    if (ViewData["SuccessMsg"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <strong>Congratulations! </strong> you have sended feedback successful.
                            <br />We'll contact you as soon as possible
                        </div>
                    }
                    @Html.ValidationSummary(false, "", new { @class = "error" });
                    @Html.TextBoxFor(model => model.Name, new { @class = "textbox", @placeholder = "Name" });
                    @Html.TextBoxFor(model => model.Email, new { @class = "textbox", @placeholder = "Email" });
                    @Html.TextAreaFor(model => model.Message, new { @placeholder = "Message" });


                    MvcCaptcha contactCaptcha = new MvcCaptcha("contactCaptcha");
                    @Html.Captcha(contactCaptcha);
                    @Html.TextBox("CaptchaCode");

                    <input type="submit" value="Send">
                    <div class="clearfix"> </div>
                }
            </div>
        </div>
    </div>
</div>